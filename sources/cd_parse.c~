char            *remove_end_chars(char c, char *str, int start)
{
  int           i;

  i = 0;
  if (start == 1)
    {
      while (str[i] == c || str[i] == '/')
        i++;
      return (str + i);
    }
  else if (start == 0)
    {
      i = my_strlen(str) - 1;
      while (str[i] == c || str[i] == '/')
        i--;
      str[i + 1] = '\0';
      return (str);
    }
}
